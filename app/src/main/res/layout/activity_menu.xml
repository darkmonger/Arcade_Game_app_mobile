<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_activity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="281dp"
        android:layout_height="98dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="50dp"
        android:text="Welcome"
        android:textSize="60sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/GamesView"
        android:layout_width="261dp"
        android:layout_height="135dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/InformationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/InformationView"
        android:layout_width="272dp"
        android:layout_height="139dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toTopOf="@+id/ExitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GamesView"
        tools:srcCompat="@android:drawable/ic_dialog_map" />

    <ImageView
        android:id="@+id/ExitView"
        android:layout_width="214dp"
        android:layout_height="314dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/snake" />

</androidx.constraintlayout.widget.ConstraintLayout>